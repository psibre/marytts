<ivysettings>
	<property name="component.pattern" value="[artifact]-[revision].[ext]" />
	<caches defaultCacheDir="${mary.base}" artifactPattern="${component.pattern}">
		<cache name="marybase-lib" ivyPattern="installed/[artifact]/ivy-[revision].xml" artifactPattern="lib/${component.pattern}" />
	</caches>
	<resolvers>
		<chain>
			<filesystem name="marybase-lib">
				<ivy pattern="${mary.base}/installed/[artifact]-[revision]-component.xml" />
				<artifact pattern="${mary.base}/lib/${component.pattern}" />
			</filesystem>
			<filesystem name="marybase" cache="marybase-lib" />
			<url name="dfki">
				<artifact pattern="http://mary.dfki.de/download/5.0-SNAPSHOT/${component.pattern}" />
			</url>
		</chain>
	</resolvers>
</ivysettings>
