<ivysettings>
	<caches defaultCacheDir="${mary.base}/download" ivyPattern="[module]-[revision](-[classifier]).xml" artifactPattern="[module]-[revision](-[classifier]).[ext]">
		<cache name="downloaded" />
	</caches>
	<resolvers>
		<chain name="remote" returnFirst="true">
			<filesystem name="downloaded" cache="downloaded" />
			<url name="dfki">
				<artifact pattern="http://mary.dfki.de/download/[revision]/[module]-[revision](-[classifier]).[ext]" />
			</url>
			<ibiblio name="diax" m2compatible="true" usepoms="false" root="http://diax.coli.uni-saarland.de/artifactory/repo" />
		</chain>
		<filesystem name="installed">
			<ivy pattern="${mary.base}/installed/[module]-[revision](-[classifier]).xml" />
			<artifact pattern="${mary.base}/lib/[module]-[revision](-[classifier]).[ext]" />
		</filesystem>
	</resolvers>
	<settings defaultResolver="remote" />
</ivysettings>
